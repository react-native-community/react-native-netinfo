{
  "include": ["js/**/*.ts"],
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "lib": ["es2015", "es2016", "esnext", "dom"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
